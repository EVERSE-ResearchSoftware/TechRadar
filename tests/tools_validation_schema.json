{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EVERSE Research Software (RS) Tools Validation Schema",
  "description": "Schema for validating software tool entries in the EVERSE Research Software context",
  "type": "object",
  "properties": {
    "@context": {
      "description": "The JSON-LD context for term definitions",
      "type": ["string", "object"]
    },
    "@id": {
      "description": "Unique identifier for the software tool",
      "type": "string",
      "format": "uri"
    },
    "@type": {
      "description": "The type of the entity, typically schema:SoftwareApplication",
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "schema:name": {
      "description": "The name of the software tool",
      "type": "string"
    },
    "schema:description": {
      "description": "A description of the software tool",
      "type": "string"
    },
    "schema:url": {
      "description": "URL of the software tool",
      "type": "string",
      "format": "uri"
    },
    "schema:identifier": {
      "description": "An identifier for the software tool",
      "type": ["string", "array", "object"],
      "format": "uri"
    },
    "schema:isAccessibleForFree": {
      "description": "Whether the software is free to access",
      "type": "boolean"
    },
    "schema:license": {
      "description": "License under which the software is released",
      "type": ["string", "array", "object"],
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "schema:applicationCategory": {
      "description": "The category of the application",
      "type": ["string", "array", "object"],
      "items": {
        "type": "string",
        "enum": [
          "rs:AnalysisCode", 
          "rs:PrototypeTool", 
          "rs:ResearchInfrastructureSoftware",
          "AnalysisCode", 
          "PrototypeTool", 
          "ResearchInfrastructureSoftware"
        ]
      }
    },
    "schema:author": {
      "description": "The author(s) of the software",
      "type": ["string", "array", "object"],
      "items": {
        "type": ["string", "object"]
      }
    },
    "codemeta:maintainer": {
      "description": "The maintainer(s) of the software",
      "type": ["string", "array", "object"],
      "items": {
        "type": ["string", "object"]
      }
    },
    "rs:hasQualityDimension": {
      "description": "Quality dimensions addressed by the tool",
      "type": ["string", "array", "object"],
      "items": {
        "type": "string",
        "enum": [
          "Compatibility",
          "FAIRness",
          "Flexibility",
          "Functional suitability",
          "Interaction Capability",
          "Maintainability",
          "Performance Efficiency",
          "Reliability",
          "Safety",
          "Security",
          "Sustainability",
          "https://w3id.org/everse/rs#Compatibility",
          "https://w3id.org/everse/rs#FAIRness",
          "https://w3id.org/everse/rs#Flexibility",
          "https://w3id.org/everse/rs#Functional suitability",
          "https://w3id.org/everse/rs#Interaction Capability",
          "https://w3id.org/everse/rs#Maintainability",
          "https://w3id.org/everse/rs#Performance Efficiency",
          "https://w3id.org/everse/rs#Reliability",
          "https://w3id.org/everse/rs#Safety",
          "https://w3id.org/everse/rs#Security",
          "https://w3id.org/everse/rs#Sustainability"
        ]
      }
    },
    "rs:hasQualityIndicator": {
      "description": "Quality indicators addressed by the tool",
      "type": ["string", "array", "object"],
      "items": {
        "type": "string"
      }
    },
    "rs:howToUse": {
      "description": "How the software is expected to be used",
      "type": ["string", "array"],
      "items": {
        "type": "string",
        "enum": ["CI/CD", "command-line", "online-service"]
      }
    },
    "rs:usedBy": {
      "description": "Science cluster using the tool",
      "type": ["string", "array"],
      "items": {
        "type": "string",
        "enum": ["ENVRI", "ESCAPE", "LS-RI", "PaNOSC", "SSHOC"]
      }
    },
    "rs:appliesToProgrammingLanguage": {
      "description": "Programming languages the tool applies to",
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "@id",
    "schema:name",
    "schema:description",
    "schema:license",
    "schema:url",
    "schema:applicationCategory",
    "schema:hasQualityDimension"
  ],
  "additionalProperties": false
}